<script>
  document.getElementById('contact-form')?.addEventListener('submit', function(event) {
    event.preventDefault(); // Prevenimos el env√≠o tradicional del formulario

    // Obtenemos los valores de los campos
    const nameInput = document.getElementById('contact-name') as HTMLInputElement;
    const emailInput = document.getElementById('contact-email') as HTMLInputElement;
    const experienceInput = document.getElementById('contact-experience') as HTMLSelectElement;
    const messageInput = document.getElementById('contact-message') as HTMLTextAreaElement;

    const name = nameInput.value;
    const email = emailInput.value;
    const experience = experienceInput.value;
    const message = messageInput.value;
    const phoneNumber = '5492616358297';

    // Construimos el mensaje para WhatsApp
    let whatsappMessage = `¬°Hola! üëã Mi nombre es ${name}.`;
    if (experience) {
      whatsappMessage += `\n\nQuisiera consultar por la experiencia: *${experience}*.`;
    }
    if (message) {
      whatsappMessage += `\n\nMi consulta es: ${message}`;
    }
    if (email) {
      whatsappMessage += `\n\nMi email de contacto es: ${email}`;
    }

    // Codificamos el mensaje para la URL y abrimos WhatsApp
    const encodedMessage = encodeURIComponent(whatsappMessage);
    const whatsappURL = `https://wa.me/${phoneNumber}?text=${encodedMessage}`;
    window.open(whatsappURL, '_blank');
  });
</script>
